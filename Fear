    <div class="skull"></div>
    <div class="skull"></div>
  </div>
  <div id="counter">Fear: 0 / 12</div>

  <!-- Som Dark_Emptiness -->
  <audio id="dark-sound" src="Dark_Emptiness.mp3"></audio>

  <script>
    const skulls = document.querySelectorAll('.skull');
    const counter = document.getElementById('counter');
    const message = document.getElementById('message');
    const darkSound = document.getElementById('dark-sound');

    function updateCounter() {
      const activeCount = document.querySelectorAll('.skull.active').length;
      counter.textContent = `Fear: ${activeCount} / 12`;

      // Mensagens
      let text = "";
      if (activeCount >= 0 && activeCount <= 2) text = "Sua hora chegará!";
      else if (activeCount >= 3 && activeCount <= 6) text = "Divirta-se!";
      else if (activeCount >= 7 && activeCount <= 9) text = "Nada tema!";
      else if (activeCount >= 10 && activeCount <= 11) text = "TPK não é opção!";
      else if (activeCount === 12) text = "Sua hora chegou!";

      if (text) {
        if (message.textContent !== text) {
          message.textContent = text;
          message.classList.remove("visible");
          void message.offsetWidth; // reinicia animação
          message.classList.add("visible");
        }
      } else {
        message.textContent = "";
        message.classList.remove("visible");
      }

      // Efeito do contador
      if (activeCount === 12) {
        counter.style.color = "#ff0033";
        counter.style.textShadow = "0 0 25px #ff0033, 0 0 50px #ff0055";
      } else {
        counter.style.color = "#fff";
        counter.style.textShadow = "0 0 12px #ff0033";
      }
    }

    skulls.forEach(skull => {
      skull.addEventListener('click', () => {
        skull.classList.toggle('active');
        darkSound.currentTime = 0;  
        darkSound.play();
        updateCounter();
      });
    });
  </script>
</body>
