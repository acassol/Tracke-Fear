    #message {
      font-size: clamp(18px, 4vw, 30px);
      font-weight: bold;
      margin-bottom: 20px;
      opacity: 0;
      transition: opacity 0.6s ease-in-out;
      text-align: center;
    }

    .visible {
      opacity: 1;
      animation: glow 1s infinite alternate, zoomIn 0.6s ease forwards;
    }

    @keyframes glow {
      from { text-shadow: 0 0 15px #ff0033; }
      to   { text-shadow: 0 0 30px #ff3366; }
    }

    @keyframes zoomIn {
      0%   { transform: scale(0.8); opacity: 0; }
      70%  { transform: scale(1.2); opacity: 1; }
